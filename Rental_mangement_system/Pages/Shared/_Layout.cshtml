<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Rental_mangement_system</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Rental_mangement_system.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-toggleable-sm navbar-light box-shadow">
            <div class="container">
                <a class="navbar-brand text-white text-decoration-none" asp-area="" asp-page="/Index"><h1>Rental Mangement System</h1></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-md-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Properties_posting_pages/Add_house">Post your house</a>
                        </li>
                    </ul>
                        @if( LoginModel.loggedin == true){
                            <ul class="navbar-nav flex-grow-1 float-end">
                                <li class="nav-item float-end">
                                    <a class="nav-link text-white" asp-area="" asp-page="/Settings">Logout</a>
                                </li>
                            </ul>
                        }      
                        else{
                            <ul class="navbar-nav flex-grow-1 float-end">
                                <li class="nav-item float-end">
                                    <a class="nav-link text-white" asp-area="" asp-page="/Login">Login</a>
                                </li>
                                <li class="nav-item float-end">
                                    <a class="nav-link text-white" asp-area="" asp-page="/Signup">Signup</a>
                                </li>
                            </ul>
                        }
                    
                </div>
            </div>
        </nav>
    </header>
    <div class="container page-container">
        <main role="main" class="pb-3 margin">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Rental_mangement_system - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>